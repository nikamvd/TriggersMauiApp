                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Border>-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
